<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:NourTimesNews.ViewModels"
             x:DataType="vm:DetailsViewModel"
             x:Class="NourTimesNews.DetailPage">
    
    <VerticalStackLayout>
            <VerticalStackLayout Padding="20" Spacing="15">
                <Label Text="{Binding Article.Title}"
                       FontSize="24"
                       FontAttributes="Bold"
                       TextColor="DarkSlateGray" />
                <StackLayout Orientation="Horizontal" Spacing="10">
                    <Label Text="{Binding Article.Author}"
                           FontSize="16"
                           TextColor="Black"/>

                    <Label Text="{Binding Article.PublishedAt, StringFormat='- {0:yyyy-MM-dd}'}"
                           FontSize="16"
                           TextColor="Black"/>
                </StackLayout>
                <Image Source="{Binding Article.UrlToImage}"/>
                <Label Text="{Binding Article.Content, 
                                      TargetNullValue='No content available'}" />
            </VerticalStackLayout>
    </VerticalStackLayout>
</ContentPage>